{
  "name": "microrr",
  "version": "1.0.0",
  "description": "microrr - Microservices Registry and Routing Framework",
  "bin": {
    "microrr": "./dist/microrr-cli.js"
  },
  "scripts": {
    "start": "$npm_package_bin_microrr",
    "build": "npm run build-ts && npm run tslint && npm run make-executable",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "make-executable": "ts-node ./makeCliExecutable.ts",
    "test": "nyc mocha -r ts-node/register test/**/*.spec.ts"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/erolms/microrr.git"
  },
  "keywords": [
    "microservices",
    "cloud",
    "registry",
    "router",
    "fabric",
    "mesh",
    "service mesh",
    "service registry",
    "fabric mesh",
    "router mesh",
    "internet of things",
    "iot"
  ],
  "author": "Erol Zavidic <erolms@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/erolms/microrr/issues"
  },
  "homepage": "https://microrr.org/",
  "dependencies": {
    "commander": "^6.0.0",
    "lodash": "^4.17.21",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/chai": "^4.2.12",
    "@types/lodash": "^4.14.160",
    "@types/mocha": "^8.0.3",
    "@types/node": "^14.6.0",
    "@types/shelljs": "^0.8.8",
    "chai": "~4.2.0",
    "mocha": "^8.1.2",
    "nyc": "^15.1.0",
    "shelljs": "^0.8.4",
    "ts-node": "^9.0.0",
    "tslint": "^6.1.3",
    "typescript": "^4.0.2"
  }
}
