{
  "name": "microrr",
  "version": "1.0.0",
  "description": "microrr - Microservices Registry and Routing Framework",
  "bin": {
    "microrr": "./dist/microrr-cli.js"
  },
  "scripts": {
    "start": "$npm_package_bin_microrr",
    "build": "npm run build-ts && npm run tslint && npm run make-executable",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "make-executable": "ts-node ./makeCliExecutable.ts",
    "test": "nyc mocha -r ts-node/register test/**/*.spec.ts"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/erolms/microrr.git"
  },
  "keywords": [
    "microservices",
    "cloud",
    "registry",
    "router",
    "fabric",
    "mesh",
    "service mesh",
    "service registry",
    "fabric mesh",
    "router mesh",
    "internet of things",
    "iot"
  ],
  "author": "Erol Zavidic <erolms@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/erolms/microrr/issues"
  },
  "homepage": "https://microrr.org/",
  "dependencies": {
    "commander": "~2.19.0",
    "lodash": "~4.17.5",
    "winston": "~3.2.1"
  },
  "devDependencies": {
    "@types/chai": "~4.1.2",
    "@types/lodash": "~4.14.105",
    "@types/mocha": "~5.2.5",
    "@types/node": "~10.12.23",
    "@types/shelljs": "~0.8.2",
    "chai": "~4.2.0",
    "mocha": "~5.2.0",
    "nyc": "~13.2.0",
    "shelljs": "~0.8.1",
    "ts-node": "~8.0.1",
    "tslint": "~5.12.1",
    "typescript": "~3.3.3"
  }
}
